<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tour_info_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="참고"
        android:textColor="#2E2E2E"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/tour_info_title_text_view"
        android:id="@+id/tour_content_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="의왕시"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tour_content_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tour_content_title_text_view"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="타이틀 입니다."
        android:textColor="#2E2E2E"
        android:textSize="13dp"
        android:textStyle="bold" />
</RelativeLayout>