<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<TextView
    android:id="@+id/tour_addr_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:text="의왕시"
    android:textColor="#1ABC9C"
    android:textSize="12dp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/tour_title_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tour_addr_text_view"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:text="타이틀 입니다."
    android:textColor="#2E2E2E"
    android:textSize="30dp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/tour_information_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tour_title_text_view"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="35dp"
    android:lineSpacingExtra="2dp"
    android:textColor="#2E2E2E"
    android:textSize="14dp" />

