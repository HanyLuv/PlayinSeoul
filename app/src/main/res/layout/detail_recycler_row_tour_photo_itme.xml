<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/tour_left_photo_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        />


    <ImageView
        android:id="@+id/tour_right_photo_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/tour_left_photo_image_view" />


    <TextView
        android:layout_toRightOf="@+id/tour_left_photo_image_view"
        android:id="@+id/tour_photo_more_text_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#73FFFFFF"
        android:visibility="gone"
        android:gravity="center"
        android:text="+ 5"
        android:textSize="60dp" />

</RelativeLayout>
